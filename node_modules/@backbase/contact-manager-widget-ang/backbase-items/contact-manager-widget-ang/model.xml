<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<catalog>
  <widget>
    <name>bb-contact-manager-ang</name>
    <properties>
      <property name="classId">
        <value>ContactManagerWidgetComponent</value>
      </property>
      <property name="src">
        <value>$(itemRoot)/index.html</value>
      </property>
      <property name="render.requires">
        <value>render-bb-widget-3</value>
      </property>
      <property name="title" label="Title" readonly="true" viewHint="admin,designModeOnly">
        <value type="string">Manage contacts</value>
      </property>
      <property name="thumbnailUrl">
        <value>$(itemRoot)/icon.png</value>
      </property>
      <property name="label">
        <value>Angular Contact Manager WC3 Widget</value>
      </property>
      <property name="showAvatar" label="Display avatars" viewHint="text-input,manager">
        <value type="boolean">true</value>
      </property>
      <property name="newContact" label="Enable the creation of new contacts" viewHint="text-input,admin,manager">
        <value type="boolean">true</value>
      </property>
      <property name="pageSize" label="Number of contacts per page" viewHint="text-input,manager">
        <value type="string">5</value>
      </property>
      <property label="Max. number of navigation pages" name="maxNavPages" viewHint="text-input,admin">
        <value type="long">3</value>
      </property>
      <property label="Pagination type (pagination, load-more)" name="paginationType" viewHint="text-input,admin">
        <value type="string">pagination</value>
      </property>
       <property name="notificationDismissTime" label="Milliseconds to dismiss any notification message" viewHint="text-input,admin,designModeOnly">
        <value type="long">5000</value>
      </property>
      <property name="createContactEmail" label="Allow to create Contact with email" viewHint="checkbox,admin,designModeOnly">
        <value type="boolean">false</value>
      </property>
        <property name="createContactIBAN" label="Allow to create Contact with IBAN" viewHint="checkbox,admin,designModeOnly">
        <value type="boolean">true</value>
      </property>

        <property name="createContactAccount" label="Allow to create Contact with Account Number" viewHint="checkbox,admin,designModeOnly">
        <value type="boolean">false</value>
      </property>

        <property name="createContactPhone" label="Allow to create Contact with Phone Number" viewHint="checkbox,admin,designModeOnly">
        <value type="boolean">false</value>
      </property>
    </properties>
    <tags>
      <tag type="regular">wc3</tag>
    </tags>
  </widget>
</catalog>
