<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<catalog>
  <widget>
    <name>bb-transactions-list-widget-ang</name>
    <properties>
      <property name="classId">
        <value>TransactionsListWidgetComponent</value>
      </property>
      <property name="src">
        <value>$(itemRoot)/index.html</value>
      </property>
      <property name="render.requires">
        <value>render-bb-widget-3</value>
      </property>
      <property name="title" label="Title" readonly="true" viewHint="admin,designModeOnly">
        <value>View transactions list</value>
      </property>
      <property name="thumbnailUrl">
        <value>$(itemRoot)/icon.png</value>
      </property>
      <property name="bb.transaction.pageSize" label="Number of history transaction records per page" viewHint="text-input,admin">
        <value type="long">10</value>
      </property>
      <property name="bb.transaction.maxNavPages" label="Max. number of navigation pages" viewHint="text-input,admin">
        <value type="long">3</value>
      </property>
      <property name="bb.transaction.paginationType" label="Pagination type" viewHint="select-one,admin">
        <value type="string">load-more</value>
      </property>
      <property name="bb.transaction.initialFilterOptions" label="Options to initialize the filter (format as query parameters)" viewHint="text-input,admin">
        <value type="string"></value>
      </property>
      <property name="bb.transaction.initialSortOptions" label="Options to initialize the sorting (e.g. 'amount ASC' or empty)" viewHint="text-input,admin">
        <value type="string">bookingDate DESC</value>
      </property>
      <property name="bb.transaction.showControls" label="Show transactions control such as filter and search" viewHint="checkbox,admin">
        <value type="boolean">true</value>
      </property>
      <property name="bb.transaction.showChangeCategory" label="Enable change category" viewHint="checkbox,admin">
        <value type="boolean">true</value>
      </property>
      <property name="bb.transaction.showPendingTransactionsOnTop" label="Pending transactions on top and hides billing status filter" viewHint="checkbox,admin">
        <value type="boolean">false</value>
      </property>
      <property name="bb.transaction.showCheckImage" label="Set the value to true to display check images for applicable transactions with associated check images. Set the value to false to hide the check images and do not make additional call to retrieve them" viewHint="checkbox,admin">
        <value type="boolean">false</value>
      </property>
      <property name="input.googleAPIKey" viewHint="text-input,admin">
        <value type="string"/>
      </property>
      <property name="event.refreshTransactionsList" label="Comma separated list of event names to subscribe to perform transactions refresh" viewHint="admin,designModeOnly">
        <value></value>
      </property>
      <property name="bb.transaction.getOrPostEndpoints" label="Making GET or POST requests" viewHint="select-one,admin">
        <value type="string">get-request</value>
      </property>
      <property name="options">
        <value>$(itemRoot)/options.json</value>
      </property>
      <!-- Dispute and Inquery properties -->
      <property name="enableDisputeAndInquiry" label="" viewHint="checkbox,admin">
        <value type="boolean">true</value>
      </property>
      <property name="disputeEligibilityDays" label="" viewHint="text-input,admin">
        <value type="long">120</value>
      </property>
      <property name="disputeByBillingStatus" label="" viewHint="checkbox,admin">
        <value type="boolean">true</value>
      </property>
      <property name="disputeTransactionTypes" label="" viewHint="text-input,admin">
        <value type="string">Credit/Debit Card</value>
      </property>
      <property name="inquireTopicId" label="" viewHint="text-input,admin">
        <value type="string"></value>
      </property>
      <property name="disputeTopicId" label="" viewHint="text-input,admin">
        <value type="string"></value>
      </property>
    </properties>
    <tags>
      <tag type="regular">wc3</tag>
      <tag type="regular">transactions</tag>
    </tags>
  </widget>
</catalog>
